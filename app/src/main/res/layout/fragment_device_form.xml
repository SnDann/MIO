<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/editTextDeviceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome do dispositivo" />

        <EditText
            android:id="@+id/editTextDeviceType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tipo (http ou mqtt)" />

        <EditText
            android:id="@+id/editTextDeviceAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Endereço (URL ou tópico)" />

        <EditText
            android:id="@+id/editTextDeviceOnCommand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Comando para ligar (ex: /ligar ou ON)" />

        <EditText
            android:id="@+id/editTextDeviceOffCommand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Comando para desligar (ex: /desligar ou OFF)" />

        <Button
            android:id="@+id/buttonSaveDevice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar" />
    </LinearLayout>
</ScrollView> 